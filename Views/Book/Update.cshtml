@model Book

@{ 
    var listCategory = ViewData["listCategories"] as List<Category>; 
}

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .btn-wrapper {
        margin: 10px 0 10px 0;
    }
    #book-management{
        color: black;
        text-decoration: none;
    }
    #category-request{
        color: black;
        text-decoration: none;
    }
</style>

<div class="body-container">
    @* <div class="side-bar"> *@
    @*     <ul class="list-group"> *@
    @*         <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Book" asp-action="Index">Book Management</a></li> *@
    @*         <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li> *@
    @*         <li class="list-group-item"><i class="fa-solid fa-clipboard-user"></i>Record Management</li> *@
    @*     </ul> *@
    @* </div> *@
 
    <div class="display-container">
        <form asp-controller="Book" asp-action="Update" method="post">
            <input asp-for="@Model.Id" type="hidden" value="@Model.Id" />

            <div class="form-group">
                <label>Name Of Book</label>
                <input asp-for="Title" class="form-control" placeholder="Title of Book" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Author</label>
                <input asp-for="Author" class="form-control" placeholder="Author" />
                <span asp-validation-for="Author" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price" class="form-control" placeholder="Price" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Quantity</label>
                <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" />
                <span asp-validation-for="Quantity" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>Description of Book</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Category" class="control-label"></label>
                <select asp-for="@Model.CategoryId"
                        asp-items="@(new SelectList(listCategory, nameof(Category.Id), nameof(Category.CategoryName)))">
                    <option>Please select one</option>
                </select>
            </div>

            <div class="btn-wrapper">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>